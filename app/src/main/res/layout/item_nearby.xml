<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7dp">

    <android.support.v7.widget.CardView
        android:id="@+id/recom_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/image_prev_reccom"
                android:src="@color/colorPrimaryDark"
                android:layout_width="150dp"
                android:layout_height="120dp" />

            <com.leaderproject.doikum.thewaytoeat.customComponent.CustomBoldTextView
                android:id="@+id/restaurant_title_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_prev_reccom"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="17sp"
                android:text="FOOD_TITLE" />

            <com.leaderproject.doikum.thewaytoeat.customComponent.CustomBoldTextView
                android:id="@+id/locate_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/restaurant_title_nearby"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12dp"
                android:text="LOCATION" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>