<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"

        android:src="@mipmap/ic_launcher"
        android:id="@+id/res_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RESTUARANT_NAME"
        android:id="@+id/res_name"
        android:layout_alignTop="@+id/res_logo"
        android:layout_toEndOf="@+id/res_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="RESTUARANT_ADDRESS"
        android:id="@+id/res_addres"
        android:layout_below="@+id/res_name"
        android:layout_alignStart="@+id/res_name" />

</RelativeLayout>